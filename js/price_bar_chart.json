{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "data/melb/melb_data_cleaned.csv"
    },
    "vconcat": [
        { "title": {
            "text": "Most Popular Day to Sell Property",
            "font": "Georama",
            "fontSize": 25,
            "color": "#ffffff"
        },
            "width": 700,
            "height": 200,
            "mark": "bar",
            "encoding": {
                "x": {
                    "aggregate": "count",
                    "title": "Number of Properties Sold"
                },
                "y": {
                    "field": "Day of Week",
                    "type": "ordinal",
                    "sort": "-x"
                },
                "color": {
                    "value": "#e4d5b7"
                }
            }
        },
        {
            "title": {
                "text": "Property sold each month",
                "font": "Georama",
                "fontSize": 25,
                "color": "#ffffff"
            },
            "width": 700,
            "height": 200,
            "mark": "line",
            "encoding": {
                "x": {
                    "field": "MonthYear",
                    "timeUnit": "yearmonth",
                    "type": "ordinal"
                },
                "y": {
                    "aggregate": "count",
                    "title": "Number of Properties Sold"
                },
                "color": {
                    "value": "#d8eeff"
                }


            }
        }
    ],
    "config": {
        "background": "#3c4c5e",
        "axis": {
            "titleColor": "#e2e6e9",
            "labelColor": "#e2e6e9",
            "labelFont": "sans-serif",
            "labelFontSize": 15,
            "labelAngle": -45,
            "titleFontSize": 15,
            "grid": false
        },
        "view": {
            "stroke": "#3c4c5e"
        }
    }
}



